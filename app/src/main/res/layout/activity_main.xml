<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:gravity="top|left"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/errorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="monospace"
            android:paddingStart="10dp"
            android:text="Abascia"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/anglemodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="monospace"
            android:paddingEnd="10dp"
            android:text="PLACE"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fillViewport="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <com.shkhuz.abascia.CalculatorKeyLayout
        android:id="@+id/keygrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:columnCount="5"
        android:rowCount="5">

        <Button
            android:id="@+id/sin"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/cos"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/tan"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/ln"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/log"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/drop"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/swap"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/recip"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/sqrt"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/pow2"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/shift"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k7"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k8"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k9"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/div"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/del"
            style="@style/CalculatorButtonSmallStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k4"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k5"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k6"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/mult"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/enter"
            style="@style/CalculatorButtonSmallStyle"
            android:layout_rowSpan="2"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k1"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k2"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k3"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/minus"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/k0"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/point"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/chs"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

        <Button
            android:id="@+id/plus"
            style="@style/CalculatorButtonLargeStyle"
            android:onClick="clickHandler"
            android:text="" />

    </com.shkhuz.abascia.CalculatorKeyLayout>

</LinearLayout>
